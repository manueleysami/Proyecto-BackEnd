<%- include("../partials/header1"); %>
<div id="login">
  <div class="container">
    <div id="login-fila" class="row justify-content-center align-items-center">
      <div id="login-columna" class="col-md-6">
        <h3 class="text-center texto-login text-success">
          Ingresa a la Concesionaria UVM CAR Aquí
        </h3>
        <% if(typeof error != "undefined") {%>
        <p
          class="alert alert-danger text-uppercase text-center mt-3"
          role="alert"
        >
          <%= error %>
        </p>
        <% }%>
        <div id="login-contenedor" class="col-md-12">
          <form
            id="login-formulario"
            class="form"
            action="/login/login"
            method="post"
          >
            <h3 class="text-center text-info">Iniciar Sesión</h3>
            <div class="form-group">
              <label for="username" class="text-info">Usuario:</label><br />
              <input
                required
                type="text"
                name="usuario"
                id="username"
                class="form-control"
                placeholder="Escribe tu usuario..."
              />
            </div>
            <div class="form-group">
              <label for="password" class="text-info">Contraseña:</label><br />
              <input
                required
                type="password"
                name="clave"
                id="password"
                class="form-control"
                placeholder="Escribe tu contraseña..."
              />
            </div>
            <div class="form-group">
              <br />
              <input
                type="submit"
                name="submit"
                class="btn btn-success btn-block"
                value="Iniciar Sesión"
              />
            </div>
            <div id="registro-link" class="text-right">
              <a href="/registrarse" class="text-info">Registrate Aquí</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
