<%- include("../partials/header"); %>
<div class="container contenedor-top mb-5">
  <% if(typeof error !== "undefined") {%>
    <p class="text-center alert alert-danger text-uppercase mt-2 p-1 error-vista"><%= error %></p>
    <% }%>
    <h2 class="text-center mb-4 text-capitalize font-weight-light">Actualiza el cliente: <%= cliente.nombre %></h2>
    <div class="row d-flex justify-content-center ">
        <div class="col-md-10">
            <form action="/clientes/actualizar?_method=PUT" method="post">
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="nombre">Nombre:</label>
                    <input value="<%= cliente.id %>" name="id" type="hidden">
                    <input required value="<%= cliente.nombre %>" name="nombre"  type="text" class="form-control" id="nombre" placeholder="Escribe el nombre del cliente">
                  </div>
                  <div class="form-group col-md-6">
                    <label for="cedula">Cédula:</label>
                    <input required name="cedula"  value="<%= cliente.cedula %>" type="number" class="form-control" id="cedula" placeholder="Cédula del cliente">
                  </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-10">
                  <label for="direccion">Dirección:</label>
                  <input  required   value="<%= cliente.direccion %>"  name="direccion" type="text" class="form-control" id="direccion" placeholder="Dirección del cliente">
                    </div>
                  <div class="form-group col-md-2">
                    <label for="telefono">Teléfono:</label>
                    <input  required name="telefono"  value="<%= cliente.telefono %>" type="number" class="form-control" placeholder="Teléfono" id="telefono">
                  </div>
                </div>
                <div class="form-group">
                <button type="submit" class="text-uppercase btn btn-info btn-block">Actualizar cliente</button>
              </form>
        </div>
    </div>
</div>
<%- include("../partials/footer"); %>