<%- include("../partials/header1"); %>
<div id="registro">
  <div class="container">
    <div
      id="registro-fila"
      class="row justify-content-center align-items-center"
    >
      <div id="registro-columna" class="col-md-6">
        <h3 class="text-center texto-registro text-success">
          Registrate en la Concesionaria UVM CAR
        </h3>
        <% if(typeof error != "undefined") {%>
        <p
          class="alert alert-danger text-uppercase text-center mt-3"
          role="alert"
        >
          <%= error %>
        </p>
        <% }%>
        <div id="registro-registrar" class="col-md-12">
          <form
            id="registro-formulario"
            class="form"
            action="/registrarse/insertar"
            method="post"
          >
            <h3 class="text-center text-info texto-titulo-registro">
              Registrarse
            </h3>
            <div class="form-group">
              <label for="username" class="text-info">Usuario:</label><br />
              <input
                required
                type="text"
                name="usuario"
                id="username"
                class="form-control"
                placeholder="Ingresa un nombre de usuario..."
              />
            </div>
            <div class="form-group">
              <label for="password" class="text-info">Contraseña:</label><br />
              <input
                required
                type="password"
                name="clave"
                id="password"
                class="form-control"
                placeholder="Establece una contraseña..."
              />
            </div>
            <div class="form-group">
              <label for="password2" class="text-info"
                >Repetir Contraseña:</label
              ><br />
              <input
                required
                type="password"
                name="repetir"
                id="password2"
                class="form-control"
                placeholder="Repetir contraseña..."
              />
            </div>
            <div class="form-group">
              <input
                type="submit"
                name="submit"
                class="btn btn-success btn-block"
                value="Registrarse"
              />
            </div>
            <div id="registro-link" class="text-right">
              <a href="/login" class="text-info"
                >Si tienes cuenta, Inicia Sesión</a
              >
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
