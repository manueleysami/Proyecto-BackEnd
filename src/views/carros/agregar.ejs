<%- include("../partials/header"); %>
    <div class="container contenedor-top mb-5">
        <%if(typeof error  !== "undefined"){ %>
            <p class="text-center alert alert-danger text-uppercase mt-2 p-1 error-vista"><%= error %></p>
            <%} %>
        <h2 class="text-center mb-4 text-capitalize wei">Agrega nuevos carros a la concesionaria</h2>
        <div class="row d-flex justify-content-center ">
            <div class="col-md-10">
                <form action="/carros/insertar" method="post">
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="nombre">Nombre:</label>
                        <input required name="nombre"  type="text" class="form-control" id="nombre" placeholder="Escribe el nombre del auto">
                      </div>
                      <div class="form-group col-md-6">
                        <label for="año">Año:</label>
                        <input required name="año"   type="number" class="form-control" id="año" placeholder="Año del carro">
                      </div>
                    </div>
                    <div class="form-group">
                        <label for="marcas">Marca:</label>
                        <select id="marcas" class="form-control"  required name="marca">
                            <option value=""  selected disabled>-- Seleciona una marca --</option>
                            <% fabricantes.forEach(fabricante => { %>
                            <option  ><%= fabricante.nombre %></option>
                            <%}) %>
                        </select>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-10">
                      <label for="especificaciones">Especificaciones:</label>
                      <input  required name="especificaciones" type="text" class="form-control" id="especificaciones" placeholder="Describe el carro">
                        </div>
                      <div class="form-group col-md-2">
                        <label for="precio">Precio:</label>
                        <input  required name="precio" type="number" class="form-control" placeholder="$ Precio" id="precio">
                      </div>
                    </div>
                    <div class="form-group">
                    <button type="submit" class="btn btn-success btn-block">AGREGAR CARRO <i class="fa fa-car"></i> </button>
                  </form>
            </div>
        </div>
    </div>
</div>
<%- include("../partials/footer"); %>